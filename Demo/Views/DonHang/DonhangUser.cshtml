

@using Demo.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<Donhang>
@{ ViewBag.Title = "DonhangUser";
    Layout = "~/Views/Shared/_Layoutchinh.cshtml"; }
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Thông tin đơn hàng</h2>
            </div>
            <div class="col-12">
                <a href="/Home/Index">Trang chủ</a>
                <a href="/Product/allProduct">sản phẩm</a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <img src="~/Content/Template/img/giaohang.jpg" alt="Image">
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="sort" data-sort="budget">Mã hóa đơn</th>

                                <th scope="col" class="sort" data-sort="budget">Cửa hàng </th>
                                <th scope="col" class="sort" data-sort="budget">Người mua </th>
                                <th scope="col" class="sort" data-sort="budget">Tiến độ </th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.maDH</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.maHD</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.Cuahang.tenCH</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.NguoiDung.tenND</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.tiendo</span>
                                        </div>
                                    </td>

                                    <td>
                                        @*status*@

                                    </td>
                                 
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">

                </div>
            </div>
        </div>
    </div>
</div>
