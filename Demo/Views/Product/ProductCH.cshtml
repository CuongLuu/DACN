@using Demo.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<SanPham>
@{
    ViewBag.Title = "ProductCH";
    Layout = "~/Views/Shared/_LayoutShopmanager.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Các sản phẩm</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Hình ảnh</th>
                            <th scope="col" class="sort" data-sort="name">Tên sản phẩm</th>
                            <th scope="col" class="sort" data-sort="budget">Thể loại</th>
                            <th scope="col">Cửa hàng</th>
                            <th scope="col">Giá</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var i in Model)
                        {
                            <tr>

                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image news" src="~/Content/Template/img/@i.hinhanh">
                                        </a>

                                    </div>
                                </th>
                                <td class="budget">
                                    @i.tenSP
                                </td>
                                @*category*@
                                <td class="budget">
                                    @i.LoaiSP.tenLoaiSP
                                </td>
                                <td class="budget">
                                    @i.Cuahang.tenCH
                                </td>
                                @*view*@
                                <td class="budget">
                                    @i.gia
                                </td>
                                <td class="text-right">
                                    <a href="@Url.Action("DetailsUser","Product",new { id= @i.maSP })" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>

                                </td>


                            </tr>

                        }
                    </tbody>
                </table>
            </div>
