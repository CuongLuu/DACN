@model Demo.Models.Context.HomeModel


@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutchinh.cshtml"; }
<!-- Carousel Start -->
<div class="carousel">
    <div class="container-fluid">
        <div class="owl-carousel">
            @foreach (var item in Model.ListSlide)
            {
                <div class="carousel-item">
                    <div class="carousel-img">
                        <img src="~/Content/Template/img/@item.hinhanh" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>Trà Sữa <span>@item.name</span> </h1>
                        <p>

                        </p>
                        <div class="carousel-btn">
                            <a class="btn custom-btn" href="/Product/allProduct">Xem Menu</a>
                            <a class="btn custom-btn" href="/Cart/ShowtoCart">Đặt món</a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
    <!-- Carousel End -->

    <!-- Booking End -->
    <!-- About Start -->
    <div class="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-img">
                        <img src="~/Content/Template/img/chn.jpg" alt="Image">
                        <a href="~/Image/video.webm"><button type="button" class="btn-play" data-toggle="modal" data-target="#videoModal">
    <span></span>
</button></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-content">
                        <div class="section-header">
                            <p>Thông tin về chúng tôi</p>
                            <h2>CHN Fastfood được thành lập vào năm 2021</h2>
                        </div>
                        <div class="about-text">
                            <p>
                                Đem lại cho khách hàng những loại trà sữa từ những cửa hàng nổi tiếng
                            </p>
                            <p>
                                Không ngon chúng tôi không lấy tiền
                            </p>
                            <a class="btn custom-btn" href="">Thông tin chi tiết về chúng tôi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    <!-- Video Modal Start-->
    <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <!-- 16:9 aspect ratio -->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="" id="video" allowscriptaccess="always" allow="autoplay"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Video Modal End -->
    
    <!-- Feature End -->
    <!-- Menu Start -->
    <div class="menu">
        <div class="container">
            <div class="section-header text-center">
                <p>Thực đơn</p>
                <h2>Danh sách các loại trà sữa</h2>
            </div>
            <div class="menu-tab">
                <ul class="nav nav-pills justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#phuclong">Phúc long</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#highland">HighLand</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#koithe">KoiThe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " data-toggle="pill" href="#thealley">The Alley</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="phuclong" class="container tab-pane active">
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                @foreach (var item in Model.ListSP.Where(n => n.maCH == 5 && n.status == 1).OrderByDescending(n => n.maSP).Take(5))
                                {
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <img src="~/Content/Template/img/@item.hinhanh" alt="Image">
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>@item.tenSP</span> <strong>̀@item.gia VND</strong></h3>
                                        </div>
                                    </div>}
                            </div>
                            <div class="col-lg-5 d-none d-lg-block">
                                <img src="~/Content/Template/img/thuonghieuphuclong.jpg" alt="Image">
                            </div>
                        </div>
                    </div>
                    <div id="highland" class="container tab-pane fade">
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                @foreach (var item in Model.ListSP.Where(n => n.maCH == 6 && n.status == 1).OrderByDescending(n => n.maSP).Take(5))
                                {
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <img src="~/Content/Template/img/@item.hinhanh" alt="Image">
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>@item.tenSP</span> <strong>̀@item.gia VND</strong></h3>
                                        </div>
                                    </div>}
                            </div>
                            <div class="col-lg-5 d-none d-lg-block">
                                <img src="~/Content/Template/img/thuonghieuhighland.jpg" alt="Image">
                            </div>
                        </div>
                    </div>
                    <div id="koithe" class="container tab-pane fade">
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                @foreach (var item in Model.ListSP.Where(n => n.maCH == 7 && n.status == 1).OrderByDescending(n => n.maSP).Take(5))
                                {
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <img src="~/Content/Template/img/@item.hinhanh" alt="Image">
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>@item.tenSP</span> <strong>̀@item.gia VND</strong></h3>
                                        </div>
                                    </div>}
                            </div>
                            <div class="col-lg-5 d-none d-lg-block">
                                <img src="~/Content/Template/img/koithelogo.jpg" alt="Image">
                            </div>
                        </div>
                    </div>
                    <div id="thealley" class="container tab-pane fade">
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                @foreach (var item in Model.ListSP.Where(n => n.maCH == 8 && n.status == 1).OrderByDescending(n => n.maSP).Take(5))
                                {
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <img src="~/Content/Template/img/@item.hinhanh" alt="Image">
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>@item.tenSP</span> <strong>̀@item.gia VND</strong></h3>
                                        </div>
                                    </div>}
                            </div>
                            <div class="col-lg-5 d-none d-lg-block">
                                <img src="~/Content/Template/img/thealleylogo.png" alt="Image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Menu End -->
    <!-- Team Start -->
    <div class="team">
        <div class="container">
            <div class="section-header text-center">
                <p>Các cửa hàng</p>
                <h2>Danh Sách Các Của Hàng</h2>
            </div>
           @Html.Action("Index2","Home")
