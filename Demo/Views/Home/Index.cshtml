        <div class="container">
            <div class="owl-carousel testimonials-carousel">
                <div class="testimonial-item">
                    <div class="testimonial-img">
                        <img src="~/Content/Template/img/hieu.jpg" alt="Image">
                    </div>
                    <p>
                        Hòa đồng, vui tính
                    </p>
                    <h2>Trần Minh Hiếu</h2>
